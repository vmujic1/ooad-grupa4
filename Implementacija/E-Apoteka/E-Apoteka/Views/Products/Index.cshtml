        .card-body {
            height: 300px;
        }

        #sidebar {
            flex: 0 0 250px;
            background-color: #f2f2f2;
            padding: 20px;
        }

        .category-list {
            list-style-type: none;
            padding: 0;
            margin-bottom: 20px;
        }

            .category-list li {
                margin-bottom: 10px;
            }

        .category-list li {
            margin: 20px;
        }

        .slider-container {
            width: 250px;
            padding: 20px;
            border-radius: 3px;
            background-color: #ffffff;
        }

            .slider-container h4 {
                display: flex;
                justify-content: center;
                align-items: center;
                margin-top: 0;
            }

        .slider {
            width: 200px;
            text-align: center;
            padding-bottom: 20px;
            justify-content: center;
            align-items: center;
        }

            .slider input[type="range"] {
                width: 100%;
                margin-top: 10px;
            }

            .slider span {
                display: block;
                box-shadow: 0 0 20px rgba(0, 139, 253, 0.25);
                padding: 10px;
                font-size: 22px;
                margin-bottom: 35px;
            }

    </style>
</head>

<div class="container d-flex justify-content-center mt-50 mb-50">
    <div id="sidebar" style="margin-right:30px; border-color:black; ">
        <div style="background-color: #007bff; color:white; padding: 5px; margin-bottom:15px;">
            <h4> <i class="fa fas fa-list"></i> Categories</h4>
        </div>
        <ul class="category-list" style="height:250px; overflow:auto">
            <li><a href="#">Category 1</a></li>
